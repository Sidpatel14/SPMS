@model SPMS.Models.User

<title>Login/Register</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .body1 {
        /*  min-height: 100vh; */
        /*  display: flex; */
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        padding: 20px;
    }

    .container1 {
        background: #fff;
        padding: 50px 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        width: 100%;
        max-width: 500px;
        margin: auto;
    }

    .tab-header {
        display: flex;
        justify-content: space-around;
        margin-bottom: 30px;
    }

        .tab-header div {
            padding: 10px 20px;
            cursor: pointer;
            font-weight: bold;
            border-bottom: 2px solid transparent;
            transition: border-color 0.3s;
        }

        .tab-header .active {
            border-color: #2575fc;
            color: #2575fc;
        }

    form {
        display: none;
    }

        form.active {
            display: block;
        }

    .form-group {
        position: relative;
        margin-bottom: 25px;
    }

        .form-group input {
            width: 100%;
            padding: 12px 40px 12px 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.3s;
        }

        .form-group label {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            background: #fff;
            padding: 0 5px;
            color: #888;
            font-size: 16px;
            pointer-events: none;
            transition: 0.3s;
        }

        .form-group input:focus {
            border-color: #2575fc;
        }

            .form-group input:focus + label,
            .form-group input:not(:placeholder-shown) + label {
                top: -8px;
                font-size: 12px;
                color: #2575fc;
            }

        .form-group .icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
            font-size: 16px;
        }

    .error {
        color: red;
        font-size: 13px;
        margin-top: -15px;
        margin-bottom: 10px;
        display: none;
    }

    button {
        width: 100%;
        padding: 14px;
        border: none;
        border-radius: 8px;
        background: #2575fc;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
    }

        button:hover {
            background: #1a5ed8;
        }

    .forgot-password {
        display: block;
        text-align: right;
        margin-top: -15px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2575fc;
        text-decoration: none;
    }

        .forgot-password:hover {
            text-decoration: underline;
        }

    .login-link {
        display: block;
        text-align: center;
        margin-top: 10px;
        color: #2575fc;
        text-decoration: none;
        font-size: 14px;
    }

        .login-link:hover {
            text-decoration: underline;
        }

</style>


<div class="container1 .body1">
    <div class="tab-header">
        <div id="login-tab" class="active">Login</div>
        <div id="register-tab">Register</div>
    </div>

    <!-- Login Form -->
    <form id="login-form" class="active" onsubmit="return submitLogin()">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="email" id="login-email" placeholder=" " required>
            <label>Email</label>
            <i class="fas fa-envelope icon"></i>
        </div>
        <div class="form-group">
            <input type="password" id="login-password" placeholder=" " required>
            <label>Password</label>
            <i class="fas fa-lock icon"></i>
        </div>
        <div id="login-error" class="error">Please fill all fields correctly.</div>
        <a class="forgot-password" href="#">Forgot Password?</a>
        <button type="submit">Login</button>
    </form>
    

    @if (TempData["Success"] != null)
    {
        <div style="color:green; margin-bottom:15px;">@TempData["Success"]</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color:red; margin-bottom:15px;">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
    <!-- Register Form -->
    <form id="register-form" asp-action="CitizenLogin" asp-controller="Login" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Title</label>
            <select asp-for="Title" class="form-control">
                <option value="Mr">Mr</option>
                <option value="Mrs">Mrs</option>
                <option value="Miss">Miss</option>
            </select>
        </div>
        <div class="form-group">
            <input asp-for="FirstName"  type="text" id="First-name" placeholder=" " required>
            <label>First Name</label>
            <i class="fas fa-user icon"></i>
        </div>
        <div class="form-group">
            <input asp-for="LastName"  type="text" id="Last-name" placeholder=" " required>
            <label>Last Name</label>
            <i class="fas fa-user icon"></i>
        </div>
        <div class="form-group">
            <input asp-for="Email"  type="email" id="reg-email" placeholder=" " required>
            <label>Email</label>
            <i class="fas fa-envelope icon"></i>
        </div>
        <div class="form-group">
            <input asp-for="Password"  type="password" id="reg-password" placeholder=" " required>
            <label>Password</label>
            <i class="fas fa-lock icon"></i>
        </div>
        <div class="form-group">
            <label>Role</label>
            <select asp-for="Role"  id="role" class="form-control" required>
                <option value="" disabled selected hidden></option>
                <option>Citizen</option>
                <option>Staff</option>
                <option>Admin</option>
            </select>
           
            <i class="fas fa-user-shield icon"></i>
        </div>

        <div class="form-group">
            <input asp-for="Phone"  type="tel" id="phone" placeholder=" ">
            <label>Phone</label>
            <i class="fas fa-phone icon"></i>
        </div>

        <div class="form-group">
            <input asp-for="Address1" type="text" id="address1" placeholder=" " required>
            <label>Address Line 1</label>
            <i class="fas fa-home icon"></i>
        </div>

        <div class="form-group">
            <input asp-for="Address2"  type="text" id="address2" placeholder=" ">
            <label>Address Line 2</label>
            <i class="fas fa-home icon"></i>
        </div>

        <div class="form-group">
            <input asp-for="Town"  type="text" id="town" placeholder=" ">
            <label>Town/City</label>
            <i class="fas fa-city icon"></i>
        </div>

        <div class="form-group">
            <input asp-for="State"  type="text" id="state" placeholder=" " required>
            <label>State</label>
            <i class="fas fa-map-marker-alt icon"></i>
        </div>

        <div class="form-group">
            <input asp-for="Country"  type="text" id="country" placeholder=" " required>
            <label>Country</label>
            <i class="fas fa-flag icon"></i>
        </div>
        <div id="register-error" class="error">Please fill all fields correctly. Passwords must match.</div>
        <button type="submit">Register</button>
        <a class="login-link" href="#" onclick="switchTab('login')">Already have an account? Login</a>
    </form>
</div>

<script>
    const loginTab = document.getElementById('login-tab');
    const registerTab = document.getElementById('register-tab');
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');

    loginTab.addEventListener('click', () => switchTab('login'));
    registerTab.addEventListener('click', () => switchTab('register'));

    function switchTab(tab) {
        if(tab === 'login') {
            loginTab.classList.add('active');
            registerTab.classList.remove('active');
            loginForm.classList.add('active');
            registerForm.classList.remove('active');
        } else {
            registerTab.classList.add('active');
            loginTab.classList.remove('active');
            registerForm.classList.add('active');
            loginForm.classList.remove('active');
        }
    }

    // Login Validation
    function validateLogin() {
        const email = document.getElementById('login-email').value.trim();
        const password = document.getElementById('login-password').value.trim();
        const error = document.getElementById('login-error');
        if(email === '' || password === '') {
            error.style.display = 'block';
            return false;
        }
        error.style.display = 'none';
        return true;
    }

    // Register Validation
        function validateRegister() {
        const firstName = document.getElementById('First-name').value.trim();
        const lastName = document.getElementById('Last-name').value.trim();
        const email = document.getElementById('reg-email').value.trim();
        const password = document.getElementById('reg-password').value.trim();
        const role = document.getElementById('role').value;
        const error = document.getElementById('register-error');

        if (!firstName || !lastName || !email || !password || !role) {
            error.style.display = 'block';
            return false;
        }
        error.style.display = 'none';
        return true;
    }

        function submitLogin() {
        debugger;
        const email = document.getElementById('login-email').value.trim();
        const password = document.getElementById('login-password').value.trim();
        const errorDiv = document.getElementById('login-error');

        if (!email || !password) {
            errorDiv.textContent = "Please fill all fields.";
            errorDiv.style.display = "block";
            return false;
        }

        // Get AntiForgery token
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/Login/UserLogin', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                //'RequestVerificationToken': token
            },
            body: JSON.stringify({ Email: email, Password: password })
        })
        .then(response => response.json())
        .then(data => {
             debugger;
            if (data.success) {
                window.location.href = data.redirectUrl; // Redirect to dashboard/home
            } else {
                errorDiv.textContent = data.message;
                errorDiv.style.display = "block";
            }
        })
        .catch(err => {
            errorDiv.textContent = "An error occurred. Try again.";
            errorDiv.style.display = "block";
            console.log(err);
        });

        return false; // Prevent default form submit
    }

</script>


