@model List<AdminAppRow>
@{
    ViewBag.Title = "All Applications";
}

<div class="container mt-4">
    <h2>Applications</h2>

    <div class="card p-3 mb-3">
        <form method="get" class="row g-2">
           @*  <div class="col-md-3"><input name="type" value="@Request.Query["type"]" class="form-control" placeholder="Type" /></div> *@
            <div class="col-md-3">
                <select name="status" class="form-control">
                    <option value="">All Status</option>
                    <option value="Submitted">Submitted</option>
                    <option value="Under Review">Under Review</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                    <option value="MoreInfoRequired">More Info Required</option>
                </select>
            </div>
            <div class="col-md-2"><button class="btn btn-primary">Filter</button></div>
        </form>
    </div>

    <div class="card p-3">
        <table class="table table-hover">
            <thead><tr><th>ID</th><th>Citizen</th><th>Type</th><th>Status</th><th>Submitted</th><th>Location</th><th></th></tr></thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.ApplicationID</td>
                        <td>@a.CitizenName</td>
                        <td>@a.PermitType</td>
                        <td>@a.Status</td>
                        <td>@a.SubmissionDate.ToString("yyyy-MM-dd")</td>
                        <td>@a.State, @a.Country</td>
                        <td><a class="btn btn-sm btn-primary" href="@Url.Action("ApplicationDetails", "Admin", new { id = a.ApplicationID })">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
