@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<link href="d:\work\spms\spms\spms\content\pagecss\account.css" rel="stylesheet" />
<div class="register-card">
    <h2>Create Account</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-2 form-group">
                <select name="Title" class="form-control" required>
                    <option value="">Title</option>
                    <option value="Mr">Mr</option>
                    <option value="Mrs">Mrs</option>
                    <option value="Miss">Miss</option>
                </select>
                <label>Title</label>
            </div>
            <div class="col-md-5 form-group">
                <input type="text" name="FirstName" required placeholder=" " />
                <label>First Name</label>
            </div>
            <div class="col-md-5 form-group">
                <input type="text" name="LastName" required placeholder=" " />
                <label>Last Name</label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <input type="email" name="Email" required placeholder=" " />
                <label>Email</label>
            </div>
            <div class="col-md-6 form-group">
                <input type="password" name="Password" required placeholder=" " />
                <label>Password</label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <input type="text" name="Phone" placeholder=" " />
                <label>Phone</label>
            </div>
            <div class="col-md-6 form-group">
                <input type="text" name="Role" placeholder=" " value="Citizen" readonly />
                <label>Role</label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group">
                <input type="text" name="Address1" required placeholder=" " />
                <label>Address 1</label>
            </div>
            <div class="col-md-6 form-group">
                <input type="text" name="Address2" placeholder=" " />
                <label>Address 2</label>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 form-group">
                <input type="text" name="Town" placeholder=" " />
                <label>Town</label>
            </div>
            <div class="col-md-4 form-group">
                <input type="text" name="State" placeholder=" " />
                <label>State</label>
            </div>
            <div class="col-md-4 form-group">
                <input type="text" name="Country" placeholder=" " />
                <label>Country</label>
            </div>
        </div>

        <button type="submit">Register</button>
    }

    <div class="text-center mt-3">
        Already have an account? <a href="@Url.Action("Login", "Account")">Login here</a>
    </div>
</div>





