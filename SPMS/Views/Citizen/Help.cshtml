@{
    ViewBag.Title = "Help";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-5">
        <h1>Help & Instructions</h1>
        <p class="text-muted">Everything you need to know to use the Smart Permit Management System efficiently</p>
    </div>

    <div class="row g-4">
        <!-- Dashboard -->
        <div class="col-md-6">
            <div class="card h-100 border-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-tachometer-alt fa-2x text-primary me-3"></i>
                        <h4 class="card-title mb-0">Dashboard</h4>
                    </div>
                    <p class="card-text">Get a snapshot of your applications. Track totals, pending approvals, and completed permits at a glance.</p>
                </div>
            </div>
        </div>

        <!-- Apply for a Permit -->
        <div class="col-md-6">
            <div class="card h-100 border-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-file-alt fa-2x text-success me-3"></i>
                        <h4 class="card-title mb-0">Apply for a Permit</h4>
                    </div>
                    <p class="card-text">Fill in required fields, attach documents, and submit. Ensure accuracy to avoid delays.</p>
                </div>
            </div>
        </div>

        <!-- View Applications -->
        <div class="col-md-6">
            <div class="card h-100 border-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-folder-open fa-2x text-info me-3"></i>
                        <h4 class="card-title mb-0">View Applications</h4>
                    </div>
                    <p class="card-text">Check all your applications, track status, view details, and download documents.</p>
                </div>
            </div>
        </div>

        <!-- Upload Documents -->
        <div class="col-md-6">
            <div class="card h-100 border-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-upload fa-2x text-warning me-3"></i>
                        <h4 class="card-title mb-0">Upload Documents</h4>
                    </div>
                    <p class="card-text">Attach supporting documents directly to your applications. All actions are tracked securely.</p>
                </div>
            </div>
        </div>

        <!-- Audit Log -->
        <div class="col-md-6">
            <div class="card h-100 border-danger shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-history fa-2x text-danger me-3"></i>
                        <h4 class="card-title mb-0">Audit Log</h4>
                    </div>
                    <p class="card-text">View a detailed log of all changes made to your applications for accountability and review.</p>
                </div>
            </div>
        </div>

        <!-- Contact Support -->
        <div class="col-md-6">
            <div class="card h-100 border-secondary shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-envelope fa-2x text-secondary me-3"></i>
                        <h4 class="card-title mb-0">Contact Support</h4>
                    </div>
                    <p class="card-text">Need help? Email us at <a href="mailto:support@example.com">support@example.com</a> for assistance.</p>
                </div>
            </div>
        </div>
    </div>
</div>

