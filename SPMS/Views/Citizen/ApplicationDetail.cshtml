@model ApplicationDetailViewModel
@{
    ViewBag.Title = "Application Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Application Details</h3>
        <div>
            <a href="@Url.Action("Edit", "Application", new { id = Model.ApplicationNumber })" class="btn btn-primary btn-sm">Edit</a>
            <a href="@Url.Action("Download", "Application", new { id = Model.ApplicationNumber })" class="btn btn-success btn-sm">Download</a>
            <a href="@Url.Action("Index", "Application")" class="btn btn-secondary btn-sm">Back</a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">Application Information</h5>
            <div class="row">
                <div class="col-md-6 mb-2"><strong>Application Number:</strong> @Model.ApplicationNumber</div>
                <div class="col-md-6 mb-2"><strong>Permission Type:</strong> @Model.PermissionType</div>
                <div class="col-md-6 mb-2"><strong>Status:</strong> @Model.Status</div>
                <div class="col-md-6 mb-2"><strong>Submitted Date:</strong> @Model.SubmittedDate.ToString("dd MMM yyyy")</div>
                <div class="col-md-6 mb-2"><strong>Last Updated:</strong> @Model.LastUpdated.ToString("dd MMM yyyy HH:mm")</div>
                <div class="col-md-12 mb-2"><strong>Full Address:</strong> @Model.FullAddress</div>
                <div class="col-md-12 mb-2"><strong>Comment:</strong> @Model.Comment</div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">Documents</h5>
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Document Name</th>
                            <th>Type</th>
                            <th>Uploaded Date</th>
                            <th style="width: 120px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.Documents)
                        {
                            <tr>
                                <td>@doc.Name</td>
                                <td>@doc.Type</td>
                                <td>@doc.UploadedDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <a href="@Url.Action("DownloadDocument", "Application", new { id = doc.Id })" class="btn btn-sm btn-outline-success">Download</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No documents uploaded.</p>
            }
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">Audit Logs</h5>
            @if (Model.AuditLogs != null && Model.AuditLogs.Any())
            {
                <ul class="list-group">
                    @foreach (var log in Model.AuditLogs)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@log.Action</strong> by <em>@log.PerformedBy</em>
                                <br />
                                <small class="text-muted">@log.Timestamp.ToString("dd MMM yyyy HH:mm")</small>
                            </div>
                            <div class="text-muted">@log.Details</div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No audit records available.</p>
            }
        </div>
    </div>
</div>
