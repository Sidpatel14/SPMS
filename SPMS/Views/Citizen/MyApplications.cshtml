@model List<ApplicationViewModel>

@{
    ViewBag.Title = "My Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>My Applications</h3>
        <a href="@Url.Action("Apply", "Citizen")" class="btn btn-primary">+ Apply for New Permit</a>
    </div>

    <!-- Filter Bar -->
    <div class="card p-3 shadow-sm mb-4">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search by ID or Type</label>
                <input type="text" class="form-control" name="search" value="@Context.Request.Query["search"]" placeholder="e.g. APP-001" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select class="form-select" name="status">
                    <option value="" selected="@(string.IsNullOrEmpty(Context.Request.Query["status"]) ? "selected" : null)">All</option>
                    <option value="Submitted" selected="@(Context.Request.Query["status"] == "Submitted" ? "selected" : null)">Submitted</option>
                    <option value="Under Review" selected="@(Context.Request.Query["status"] == "Under Review" ? "selected" : null)">Under Review</option>
                    <option value="Approved" selected="@(Context.Request.Query["status"] == "Approved" ? "selected" : null)">Approved</option>
                    <option value="Rejected" selected="@(Context.Request.Query["status"] == "Rejected" ? "selected" : null)">Rejected</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" class="form-control" name="fromDate" value="@Context.Request.Query["fromDate"]" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" class="form-control" name="toDate" value="@Context.Request.Query["toDate"]" />
            </div>

            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a href="@Url.Action("MyApplications", "Citizen")" class="btn btn-secondary ms-2">Clear</a>
            </div>
        </form>
    </div>

    <!-- Table -->
    <div class="card p-4 shadow-sm">
        <h5 class="mb-3">Your Submitted Applications</h5>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Application ID</th>
                        <th>Permit Type</th>
                        <th>Status</th>
                        <th>Submitted On</th>
                        <th>Last Updated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var app in Model)
                        {
                            string badgeClass = app.Status switch
                            {
                                "Submitted" => "bg-warning text-dark",
                                "Approved" => "bg-success text-dark",
                                "Rejected" => "bg-danger text-dark",
                                "Under Review" => "bg-info text-dark",
                                _ => "bg-light text-dark"
                            };
                            <tr>
                                <td>@app.ReferenceNumber</td>
                                <td>@app.PermitType</td>
                                <td><span class="badge @badgeClass">@app.Status</span></td>
                                <td>@app.SubmissionDate?.ToString("yyyy-MM-dd")</td>
                                <td>@app.LastUpdated?.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a href="@Url.Action("ApplicationDetail", "Citizen", new { id = app.ApplicationId })" class="btn btn-sm btn-primary">View</a>
                                    @if (app.Status == "Submitted")
                                    {
                                        <a href="#" class="btn btn-sm btn-outline-danger">Cancel</a>
                                    }
                                    else if (app.Status == "Approved")
                                    {
                                        <a href="#" class="btn btn-sm btn-outline-success">Download</a>
                                    }
                                    else if (app.Status == "Rejected")
                                    {
                                        <a href="#" class="btn btn-sm btn-outline-warning">Resubmit</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No applications found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
