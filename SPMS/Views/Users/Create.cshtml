@model SPMS.Models.User

<form asp-action="Register" method="post">
    <label>Title</label>
    <input asp-for="Title" required />

    <label>First Name</label>
    <input asp-for="FirstName" required />

    <label>Last Name</label>
    <input asp-for="LastName" required />

    <label>Email</label>
    <input asp-for="Email" type="email" required />

    <label>Password</label>
    <input asp-for="Password" type="password" required />

    <label>Role</label>
    <select asp-for="Role">
        <option value="Citizen">Citizen</option>
        <option value="Staff">Staff</option>
        <option value="Admin">Admin</option>
    </select>

    <label>Phone</label>
    <input asp-for="Phone" />

    <label>Address 1</label>
    <input asp-for="Address1" required />

    <label>Address 2</label>
    <input asp-for="Address2" />

    <label>Town</label>
    <input asp-for="Town" />

    <label>State</label>
    <input asp-for="State" required />

    <label>Country</label>
    <input asp-for="Country" required />

    <button type="submit">Register</button>
</form>
