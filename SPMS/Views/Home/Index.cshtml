<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: #f4f6f8;
    }

    .dashboard {
        display: flex;
    }

    .sidebar {
        width: 220px;
        background: #2575fc;
        color: #fff;
        min-height: 100vh;
        padding: 20px;
    }

        .sidebar h2 {
            margin-bottom: 30px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            padding: 15px 10px;
            margin-bottom: 10px;
            cursor: pointer;
            border-radius: 6px;
            transition: background 0.2s;
        }

            .sidebar li.active, .sidebar li:hover {
                background: #1a5ed8;
            }

    .main-content {
        flex: 1;
        padding: 30px;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .stats {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
    }

    .card {
        background: #fff;
        flex: 1;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        text-align: center;
        font-size: 18px;
    }

    .quick-links button {
        background: #2575fc;
        color: #fff;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        margin-right: 10px;
        cursor: pointer;
    }

        .quick-links button:hover {
            background: #1a5ed8;
        }

    .recent-activity table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
    }

    .recent-activity th, .recent-activity td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }

    .recent-activity th {
        background: #f1f3f6;
    }

</style>


